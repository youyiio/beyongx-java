<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.beyongx.framework.mapper.SysMenuMapper">

    <select id="selectByRoleId" parameterType="int" resultType="SysMenu">
        select m.* from sys_menu as m, sys_role_menu as rm where r.id = rm.menu_id and rm.role_id = #{roleId}
    </select>

</mapper>
